  <body>
  @using Tamagotchi.Models;
    <h1>My Tamagotchi</h1>
    <label for="name">Name: @Model.name;</label>

    <label for="hungerBar">Hunger:</label>
    <progress id="hungerBar" value="@Model.Hunger" max="100"></progress>

    <label for="boredomBar">Boredom:</label>
    <progress id="boredomBar" value="@Model.Boredom" max="100"></progress>

    <label for="sleepinessBar">Sleepiness:</label>
    <progress id="sleepinessBar" value="@Model.Sleepiness" max="100"></progress>

    <label for="ageBar">Age:</label>
    <progress id="ageBar" value="@Model.Age" max="100"></progress>

    

    </form>
  </body>
</html>